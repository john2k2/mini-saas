{
  "name": "mini-saas-revolut",
  "version": "1.0.0",
  "description": "Complete Mini-SaaS platform with Revolut-inspired design - Next.js 15, Stripe, NextAuth, TailwindCSS v4",
  "private": true,
  "author": "john2k2",
  "repository": {
    "type": "git",
    "url": "https://github.com/john2k2/mini-saas-.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:stripe:check\"",
    "dev:next": "next dev --turbopack",
    "dev:simple": "next dev",
    "dev:stripe": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "dev:stripe:check": "node scripts/check-stripe.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "clean": "rm -rf .next out dist"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.15.0",
    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "prisma": "^6.15.0",
    "rate-limiter-flexible": "^7.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2",
    "stripe": "^18.5.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
